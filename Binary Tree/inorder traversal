class Solution {
public:
    vector<int> inorderTraversal(TreeNode* root) {

        stack<TreeNode*> st;
        TreeNode* node = root;
        vector<int> inorder;

        while(true) {
            if(node != NULL) {
                st.push(node);          // go left as much as possible
                node = node->left;
            }
            else {
                if(st.empty()) break;   // all nodes processed

                node = st.top();
                st.pop();

                inorder.push_back(node->val);  // visit node

                node = node->right;     // then go right
            }
        }

        return inorder;
    }
};
